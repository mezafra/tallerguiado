def simular_ahorro(ahorro_mensual, meses, meta):
    total = 0
    for mes in range(1, meses + 1):
        total += ahorro_mensual
        print(f"Mes {mes}: ahorro acumulado = {total} pesos")
    if total >= meta:
        print("Â¡Felicidades! Alcanzaste tu meta de ahorro.")
    else:
        print(f"No alcanzaste la meta. Te faltaron {meta - total} pesos.")
        